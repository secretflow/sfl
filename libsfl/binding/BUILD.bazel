load("@pybind11_bazel//:build_defs.bzl", "pybind_extension")

package(default_visibility = ["//visibility:public"])

exports_files(
    [
        "exported_symbols.lds",
        "version_script.lds",
    ],
    visibility = ["//visibility:private"],
)

pybind_extension(
    name = "_lib",
    srcs = [
        "binding.cc",
        "binding.h",
        "random.cc",
    ],
    linkopts = select({
        "@bazel_tools//src/conditions:darwin": [
            "-Wl,-exported_symbols_list,$(location //libsfl/binding:exported_symbols.lds)",
        ],
        "//conditions:default": [
            "-Wl,--version-script,$(location //libsfl/binding:version_script.lds)",
        ],
    }),
    deps = [
        ":exported_symbols.lds",
        ":version_script.lds",
        "//libsfl/differential_privacy/random:distributions",
    ],
)

py_library(
    name = "binding",
    data = [":_lib.so"],
)

py_test(
    name = "random_test",
    srcs = ["random_test.py"],
    deps = ["binding"],
)
